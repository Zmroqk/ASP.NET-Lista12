@page
@model Lista12.Pages.Articles.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Article</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Image)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Article.ImagePath == null)
            {
                <img src="/upload/Question_mark.png"/>
            }
            else
            {
                <img src="/@Model.Article.ImagePath"/>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Category.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Article.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
